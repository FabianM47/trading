{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Verify: Env check",
      "type": "shell",
      "command": "node",
      "args": ["scripts/verify-env.mjs"],
      "problemMatcher": []
    },
    {
      "label": "Verify: Format (check)",
      "type": "shell",
      "command": "pnpm",
      "args": ["format:check"],
      "problemMatcher": []
    },
    {
      "label": "Verify: Lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Verify: Typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": ["typecheck"],
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Verify: Tests (unit)",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "problemMatcher": []
    },
    {
      "label": "Verify: Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "problemMatcher": []
    },
    {
      "label": "Verify: All",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Verify: Env check",
        "Verify: Format (check)",
        "Verify: Lint",
        "Verify: Typecheck",
        "Verify: Tests (unit)",
        "Verify: Build"
      ],
      "problemMatcher": []
    }
  ]
}
